{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "jsx": "preserve",
    "outDir": "dist",
    "importHelpers": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": false,
    "declaration": true,
    "types": [
      "jest",
      "node"
    ],
    "lib": [
      "esnext",
      "scripthost"
    ]
  },
  "exclude": [
    "node_modules"
  ]
}